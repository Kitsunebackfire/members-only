<content class="signup__contentContainer">
  <h2 class="signup__message">Update Profile</h2>
  <form action="/account-settings" method="POST">
    <div class="signup__inputRow">
      <label>Username</label>
      <div class="signup__inputRowIconText">
        <div class="loginIcon">👤</div>
        <input
          value="<%=currentUser.username %>"
          name="username"
          type="text"
          placeholder="username"
          required
        />
      </div>
    </div>
    <% if (errors.find(elem => elem.param === 'username') !== undefined) { %>
    <div class="inputError">Username is taken</div>
    <% } %>
    <div class="signup__inputRow">
      <label for="email">Email Address</label>
      <div class="signup__inputRowIconText">
        <div class="loginIcon">✉️</div>
        <input
          value="<%=currentUser.email %>"
          id="email"
          name="email"
          type="email"
          placeholder="email@gmail.com"
          required
          oninvalid="this.setCustomValidity('Please enter a valid email such as joesmith@email.com')"
        />
      </div>
    </div>

    <div class="signup__inputRow">
      <%if(currentUser.admin === true) {%>
      <label for="adminPassword">Currently an Admin</label>
      <div class="input__rowIconAndText">
        <div class="loginIcon">🔒</div>
        <input
          id="adminPassword"
          autocomplete="off"
          name="adminPassword"
          type="text"
          minlength="3"
          maxlength="44"
          placeholder="enter 'Off' to remove"
          oninvalid="this.setCustomValidity('Enter the top secret admin password to enable admin features.')"
        />
      </div>
      <%}else{%>
      <label for="adminPassword">Top Secret Admin Password</label>
      <div class="input__rowIconAndText">
        <div class="loginIcon">🔒</div>
        <input
          id="adminPassword"
          autocomplete="off"
          name="adminPassword"
          type="password"
          minlength="3"
          maxlength="44"
          oninvalid="this.setCustomValidity('Enter the top secret admin password to enable admin features.')"
        />
      </div>
      <%}%>
    </div>

    <button class="submitBtn" type="submit">Update</button>
  </form>
</content>
